#latest
  %h2.icon.news Latest
  %ul
  - for post in page.posts
    .post
      %li    
        %a{:href=>post.originalUrl}= post.title
        .meta
          = post.author + " - "
          = post.date.strftime( '%d %B %Y' ) + " - "   
          %a{:href=>site.base_url + post.tags[0].primary_page.url}= post.tags[0]        
        .content
          = post.content

#news
  %h2.icon.news News
  %ul
  - for event in site.news
    .event
      %li
        %a{:href=>event.originalUrl}= event.date.strftime( '%d %B %Y' )
        .title
          = event.title
        .location
          = event.location
        .content
          %hr
          = event.content

